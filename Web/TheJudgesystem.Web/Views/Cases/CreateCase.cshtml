@model TheJudgesystem.Web.ViewModels.Cases.CaseInputModel

<form method="post" class="col-md-6 offset-3">
    <div asp-validation-summary="All"></div>

    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div>
        <label asp-for="Description">Describe your case: </label>
        <textarea asp-for="Description" class="form-control" rows="10"> </textarea> <br />
        <span asp-validation-for="Description" class="alert-danger"></span>
    </div>

    <button type="submit" class="btn btn-info">
        <a asp-controller="Defendant" asp-action="HireLawyer" asp-route-id="@Model.LawyerId" class="btn btn-block btn-primary">Hire</a>
    </button>
</form>
