@model PagingViewModel

<div class="align-bottom">
    <nav aria-label="...">
        <ul class="pagination justify-content-center">

            <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text>}">
                <a class="page-link" asp-route-id="@Model.PreviousPageNumber">Previous</a>
            </li>

            @if (Model.PageNumber != 1)
            {
                @for (int i = Model.PageNumber - 1; i < Model.PageNumber; i++)
                {
                    if (i > 0)
                    {
            <li class="page-item"><a class="page-link"  asp-route-id="@i">@i</a></li>                   
                    }
                }    
            }


            <li class="page-item active" aria-current="page">
                <a class="page-link"  asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
            </li>

            @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 1; i++)
            {
                if (i <= Model.PagesCount)
                {
            <li class="page-item"><a class="page-link" asp-route-id="@i">@i</a></li>
                }
            }

            <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text>}">
                <a class="page-link"  asp-route-id="@Model.NextPageNumber">Next</a>
            </li>

        </ul>
    </nav>
</div>