@model TheJudgesystem.Web.ViewModels.Lawyers.DefenceInputModel

<form method="post" class="col-md-6 offset-3">
    <div asp-validation-summary="All"></div>

    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div>
        <label asp-for="LawyerDefence">Defend your client: </label>
        <textarea asp-for="LawyerDefence" class="form-control" rows="10"> </textarea> <br />
        <span asp-validation-for="LawyerDefence" class="alert-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-info">
        <span class="btn btn-block btn-primary">Add defence</span>
    </button>
</form>
