@model TheJudgesystem.Web.ViewModels.Roles.GuardInputModel

<form method="post" class="col-md-6 offset-3">
    <div asp-validation-summary="All"></div>
    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div class="form-group">
        <label asp-for="FirstName">First name: </label>
        <input asp-for="FirstName" class="form-control"> <br />
        <span asp-validation-for="FirstName" class="alert-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div>
        <label asp-for="LastName">Last name: </label>
        <input asp-for="LastName" class="form-control"> <br />
        <span asp-validation-for="LastName" class="alert-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div>
        <label asp-for="ImageUrl">ImageUrl: </label>
        <input asp-for="ImageUrl" class="form-control"> <br />
        <span asp-validation-for="ImageUrl" class="alert-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="form-group"></div>
    <div>
        <label asp-for="Salary">Salary: </label>
        <input asp-for="Salary" class="form-control"> <br />
        <span asp-validation-for="Salary" class="alert-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</form>
